<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/BSearchPopupBackground">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/AlterDialogBackground"
        android:gravity="center"
        style="@style/AlterDialogTextViewBlueBerryStyle"/>

    <LinearLayout
        android:id="@+id/interact_layout"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/horizontal_layout_margin_20"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/seek_bar"
            android:paddingTop="@dimen/standart_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_marginTop="@dimen/horizontal_layout_margin_20"
            android:id="@+id/count_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/SearchPopupTextViewBlueBerryStyle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/interact_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:weightSum="100">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/cancel"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/alter_dialog_button_background" />

        <android.support.v7.widget.AppCompatButton
            android:layout_marginStart="5dp"
            android:id="@+id/positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/add"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/alter_dialog_button_background" />

    </LinearLayout>

</RelativeLayout>