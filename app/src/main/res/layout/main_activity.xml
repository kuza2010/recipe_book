<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BBackground">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BBackground">
    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/BNavigationBarBackground"
        android:foreground="?attr/selectableItemBackground"
        app:itemBackground="@color/BNavigationBarBackground"
        app:itemIconTint="@drawable/selector_navigation_bar"
        app:itemTextColor="@drawable/selector_navigation_bar"
        app:menu="@menu/navigation">
    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>