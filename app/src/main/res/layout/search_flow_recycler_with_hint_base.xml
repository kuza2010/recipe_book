<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/hint_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/image_view_smile"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/search_section_main_icon_size"
            android:layout_height="@dimen/search_section_main_icon_size"
            android:alpha="0.2"
            android:src="@drawable/search_main"/>

        <TextView
            android:id="@+id/text_view_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_smile"
            android:layout_centerHorizontal="true"
            android:text="@string/start_search"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view_searched_recipes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/recipe_activity_margin">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>