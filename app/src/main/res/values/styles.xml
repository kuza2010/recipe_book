<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryCustom</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkCustom</item>
        <item name="colorAccent">@color/colorAccentCustom</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDarkCustom</item>
    </style>

    <style name="AppCompatButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTintMode">src_in</item>
    </style>


    <!---   BLUE BERRY STYLE   -->

    <!--    Theme   -->
    <style name="AppThemeBlueBerry" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/BPrimary</item>
        <item name="colorPrimaryDark">@color/BDark</item>
        <item name="colorAccent">@color/BAcceptWhite</item>
        <item name="android:navigationBarColor">@color/BDark</item>
        <item name="android:editTextColor">@color/BAcceptGray</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <!--    Category flow    -->
    <style name="CategoryTextViewBlueBerryStyle">
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textColor">@color/BAcceptGray</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/BAcceptWhite</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
    </style>

    <!--    Recipe flow    -->
    <style name="RecipeTitleTextViewBlueBerryStyle" parent="CategoryTextViewBlueBerryStyle">
        <item name="android:textSize">@dimen/category_element_text_view_size_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="RecipeTitleTextViewBlueBerryStyleMinimum" parent="RecipeTitleTextViewBlueBerryStyle">
        <item name="android:textAllCaps">false</item>
    </style>

    <!--    Search flow    -->
    <style name="SearchPopupTextViewBlueBerryStyle">
        <item name="android:textColor">@color/BTextViewCategoryNameTextColor</item>
        <item name="android:textSize">@dimen/search_popup_list_text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--    Preferences flow    -->
    <style name="PreferencesTextViewBlueBerryStyle" parent="RecipeTitleTextViewBlueBerryStyle">
        <item name="android:textColor">@color/BError</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLength">30</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <!--    Alert Dialog flow    -->
    <style name="AlterDialogTextViewBlueBerryStyle" parent="CategoryTextViewBlueBerryStyle">
        <item name="android:textSize">20sp</item>
    </style>


    <!--    Recipe flow    -->
    <style name="MainRecipeRecipeNameTextView">
        <item name="android:textColor">@color/BTextViewCategoryNameTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:gravity">center</item>
    </style>

    <!--    Main Recipe flow    -->
    <style name="MainRecipeRecipeRecyclerViewTextViewTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/ubuntu_light</item>
    </style>

    <style name="MainRecipeRecipeRecyclerViewTextViewNumberTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/BAcceptWhite</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>


</resources>
